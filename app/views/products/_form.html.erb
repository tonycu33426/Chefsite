<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :brief %><br>
    <%= f.text_field :brief, :size=>"50" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :size=>"100", :rows=>"8" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class = "field" >
    <%= f.label :image %> <%= f.text_field :image, :size=>"100" %><br>
    <%= f.file_field :image %>
  </div >

  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category_id, Category.all.map { |c| [ c.name, c.id ] } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
