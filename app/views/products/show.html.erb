<h1>
  <%= @product.name %>
</h1>
<p>
  Price: <%= number_to_currency(@product.price, :unit => "R") %>
</p>
<p>
  <%= image_tag @product.image, height: "200" %>
</p>
<p>
  Brief Description: <%= @product.brief %>
 </p>
 <p>
  Description: <%= @product.description  %>
 </p>
<p>
  Category: <%= @product.category.name %>
 </p>
<p><% if user_signed_in? %>
  		<%= link_to "Add To Cart", add_cart_path, method: :post, class: "btn btn-primary" %>
   <% end %>
</p>
<p>
  <% if current_user && current_user.admin? %>
    <%= link_to 'Ingredients', product_ingredients_index_path(:product_id => @product) %>  
    |
    <%= link_to 'Recipe Steps', product_recipes_path(:product_id => @product) %> 
    |
    <%= link_to "Edit", edit_product_path(@product) %>
    |
    <%= link_to 'Destroy', product_path, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    |
  <% end %>

  <%= link_to "Back", products_path %>
</p>
