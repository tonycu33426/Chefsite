<p id="notice"><%= notice %></p>

<h1>Listing Ingredients</h1>

<%= form_tag(ingredients_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Ingredients" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
<% end %>

<%= render "ingredients/table", ingredients: @ingredients %>

<%= link_to 'New Ingredient', new_ingredient_path, class: "btn btn-primary" %>

