
<%= form_for([@product_ingredients.product, @product_ingredients]) do |f| %>
  <% if @product_ingredients.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_ingredients.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

      <ul>
      <% @product_ingredients.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Ingredient" %><br />
    <%= f.select :ingredient_id, Ingredient.all.map { |c| [ c.name, c.id ] } %>
  </div>

  <div class="field">
    <%= f.label "Metric Qty" %><br />
    <%= f.text_field :metric_qty %>
  </div>

  <div class="field">
    <%= f.label "Metric Pack Size" %><br />
    <%= f.text_field :metric_pack_size %>
  </div>

  <div class="field">
    <%= f.label "Metric Unit" %><br />
    <%= f.text_field :metric_unit %>
  </div>

  <div class="field">
    <%= f.label "Imperial Qty" %><br />
    <%= f.text_field :imperial_qty %>
  </div>
  <div class="field">
    <%= f.label "Imperial Pack Size" %><br />
    <%= f.text_field :imperial_pack_size %>
  </div>

  <div class="field">
    <%= f.label "Imperial Unit" %><br />
    <%= f.text_field :imperial_unit %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>