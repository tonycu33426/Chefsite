<ul>
  <% order.order_items.each do |item| %>
    <li>
      <em>
        <%= item.quantity %>
      </em>
      <%= item.product.name %>
      <%= number_to_currency(item.total_price, :unit => "R") %>
    </li>
  <% end %>
</ul>
<p>
  <strong>
    Total price:
    <%= number_to_currency(order.total_price,:unit => "R") %>
  </strong>
</p>

